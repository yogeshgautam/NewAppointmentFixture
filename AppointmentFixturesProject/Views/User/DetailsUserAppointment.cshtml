@model BO.BOVipViewModel

@{
    ViewBag.Title = "DetailsUserAppointment";
    Layout = "~/Views/Shared/_UserSharedView.cshtml";
}
<div class="container">
    <h2>UserAppointment Details</h2>

    <div class="container">
        <div>

            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>
               
                <dt>
                    @Html.DisplayNameFor(model => model.FromTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FromTime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ToTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ToTime)
                </dd>

                <dt>
                    @Html.DisplayName("Status")
                </dt>

                <dd>
                    @if (Model.IsCanceled == true)
                    {
                        @:Canceled
                }
                    else
                    {
                        @:Scheduled
                }

                </dd>

                <dt>
                    @Html.DisplayName("Company Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.lstCompany.Name)
                </dd>

                <dt>
                    @Html.DisplayName("Department Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AppointmentFrom)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AppointmentFrom)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AppointmentTo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AppointmentTo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Details)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Details)
                </dd>

            </dl>

        </div>
    </div>
</div>
<br />
<hr />

<p>
    
    @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-info"})
</p>
