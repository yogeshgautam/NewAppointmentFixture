@model IEnumerable<BO.BOAvailableTiming>

@{
    ViewBag.Title = "VIP";
    Layout = "~/Views/Shared/_CompanySharedView.cshtml";
}
<div class="container">
   
    <h2>VIP Appointment Details</h2>
    <hr />
    <div class="container">
        <p>
            @Html.ActionLink("Create New", "CreateTiming", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-bordered table-hover">
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </th>
              
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @if (item.IsAvailable == true)
                        {
                            @:Yes
                        }
                        else{
                            @:No
                        }
                    </td>
                 
                    <td>
                        @Html.ActionLink("Edit", "EditAvailableTiming", new { id = item.Id }, new { @class = "btn btn-info" })

                        @Html.ActionLink("Delete", "DeleteAvailableTiming", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>




