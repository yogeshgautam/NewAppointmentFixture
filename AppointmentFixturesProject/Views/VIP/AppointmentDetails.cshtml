@model BO.BOVipViewModel

@{
    ViewBag.Title = "AppointmentDetails";
    Layout = "~/Views/Shared/_VIPSharedView.cshtml";
}
<div class="container">
    <h2>Appointment Details</h2>
    <hr />
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.DateTimeId)
                @Html.HiddenFor(model => model.Date)
                @Html.HiddenFor(model => model.FromTime)
                @Html.HiddenFor(model => model.ToTime)


                <div class="form-group">
                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Model.Date
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FromTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.FromTime)
                        @Html.ValidationMessageFor(model => model.FromTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ToTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.ToTime)
                        @Html.ValidationMessageFor(model => model.ToTime, "", new { @class = "text-danger" })
                    </div>
                </div>





                <div class="form-group">
                    @Html.LabelFor(model => model.AppointmentFrom, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.AppointmentFrom)
                        @Html.ValidationMessageFor(model => model.AppointmentFrom, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayTextFor(model => model.Details)
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Appointment Status", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IsCanceled, new List<SelectListItem> { new SelectListItem { Text = "Scheduled", Value = "false" }, new SelectListItem { Text = "Canceled", Value = "true" } }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsCanceled, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
        <hr />
    </div>
</div>




