@model BO.BOVipViewModel

@{
    ViewBag.Title = "AppointmentCanceledOrNot";
    Layout = "~/Views/Shared/_VIPSharedView.cshtml";
}

<h2>AppointmentCanceledOrNot</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.IsCanceled, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBox("IsCanceled",Model.IsCanceled.HasValue ? Model.IsCanceled : false)
                    @Html.ValidationMessageFor(model => model.IsCanceled, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

