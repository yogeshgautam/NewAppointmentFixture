
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Appointment Scheduler</title>
   

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*@Scripts.Render("~/bundles/modernizr")*@

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
             
                @*@Html.ActionLink((string)@ViewBag.Companyname, "Index", "Company", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Departments", "Index", "Company")</li>
                    <li>@Html.ActionLink("Create Department", "CreateDepartment", "Company")</li>
                    <li>@Html.ActionLink("VIP", "VIP", "Company")</li>
                    <li>@Html.ActionLink("CreateVIP", "RegisterVIP", "Account")</li>
                    <li>@Html.ActionLink("Create Meeting", "CreateMeetingOne", "Company")</li>
                    <li>@Html.ActionLink("View Meeting", "ViewMeetingOne", "Company")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div style="min-height:500px;margin-top:100px">
            @RenderBody()
        </div>
        <hr />
        <div class="navbar navbar-inverse navbar-fixed-bottom">

            <footer style="color:white">
                <p>&copy; @DateTime.Now.Year - yogeshgautam</p>
            </footer>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
